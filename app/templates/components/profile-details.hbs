<div class="col-sm-4">
  <div class="pro-m">
    <div class="t-bg"></div>
    <div class="form-group">
      {{#link-to "user" class="secbox"}}
        <img src={{user.profile_picture}} alt="avatar">
        <h2>{{user.name}}</h2>
        <p>@{{user.username}}</p>
      {{/link-to}}
      {{#if this.isCurrentUser}}
        <div style="padding: 10px;">
          {{#link-to "profile-picture"}}Edit Profile Picture{{/link-to}}
        </div>
        {{component this.bioComponent user=user currentUserId=this.CurrentUser.userId bioText=bioText editBio=(action "editBio") updateBio=(action "updateBio") closeEditor=(action "closeEditor")}}
      {{else}}
        <div class="form-group col-sm-12 profile-pic">
          {{user.bio}}
        </div>
      {{/if}}
    </div>
    <div class="form-group">
      <div class="row mrgn-m">
        <div class="col-sm-12 text-center" style="margin-top: 10px;">
          <span class="small-txt">Articles</span>
          <span class="big-txt">{{articleCount}}</span>
        </div>
        <!-- <div class="col-sm-4">
          <span class="small-txt">following</span>
          <span class="big-txt">{{#link-to "user.following"}}{{user.numberOfFollowing}} {{/link-to}}</span>
        </div>
        <div class="col-sm-4">
          <span class="small-txt">followers</span>
          <span class="big-txt">{{#link-to "user.followers"}}{{user.numberOfFollowers}}{{/link-to}}</span>
        </div> -->
      </div>
    </div>
  </div>
</div>